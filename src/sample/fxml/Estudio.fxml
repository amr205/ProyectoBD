<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.EstudioController"
      prefHeight="400.0" prefWidth="400.0" spacing="15">
    <padding>
        <Insets bottom="15" top="25" right="15" left="15"/>
    </padding>
    <HBox prefHeight="40" alignment="TOP_CENTER">
        <Label text="Estudio"/>
    </HBox>

    <HBox spacing="15">
        <Label text="Clave: "/>
        <TextField fx:id="cveTextField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="15">
        <Label text="Licencia del doctor: "/>
        <TextField fx:id="licenciaTextField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="15">
        <Label text="Tipo de estudio: "/>
        <TextField fx:id="cveTipoTextField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="15">
        <Label text="RazÃ³n: "/>
        <TextField fx:id="razonTextField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="15">
        <Label text="Fecha: "/>
        <DatePicker fx:id="fechaDP" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="15" alignment="BOTTOM_LEFT">
        <Button text="Aceptar" onAction="#aceptar" />
        <Button text="Cancelar" onAction="#cancelar" />
    </HBox>
</VBox>
